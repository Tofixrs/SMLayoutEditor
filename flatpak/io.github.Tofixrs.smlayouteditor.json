{
	"app-id": "io.github.Tofixrs.sm_layout_editor",
	"runtime": "org.freedesktop.Platform",
	"runtime-version": "23.08",
	"sdk": "org.freedesktop.Sdk",
	"command": "sm-gui-launcher",
	"finish-args": [
		"--socket=x11",
		"--socket=wayland",
		"--device=dri",
		"--filesystem=home"
	],
	"modules": [
		"shared-modules/glu/glu-9.json",
		{
			"name": "tinyxml2",
			"buildsystem": "meson",
			"sources": [
				{
					"type": "git",
					"url": "https://github.com/leethomason/tinyxml2.git",
					"tag": "10.0.0"
				}
			]
		},
		{
			"name": "sm-gui-configGen",
			"buildsystem": "cmake",
			"sources": [
				{
					"type": "dir",
					"path": "../"
				}
			]
		},
		{
			"name": "mygui",
			"buildsystem": "cmake",
			"sources": [
				{
					"type": "git",
					"url": "https://github.com/MyGUI/mygui.git",
					"tag": "MyGUI3.4.3"
				},
				{
					"type": "patch",
					"path": "../patches/blurry_subskin.patch"
				},
				{
					"type": "patch",
					"path": "../patches/font_cache.patch"
				},
				{
					"type": "patch",
					"path": "../patches/xdg_config_for_settings.patch"
				}
			],
			"config-opts": [
				"-DMYGUI_BUILD_TOOLS=ON",
				"-DMYGUI_BUILD_DEMOS=OFF",
				"-DMYGUI_BUILD_PLUGINS=OFF",
				"-DMYGUI_RENDERSYSTEM=7",
				"-DMYGUI_INSTALL_TOOLS=TRUE"
			]
		},
		{
			"name": "sm-gui-launcher",
			"buildsystem": "simple",
			"build-commands": [
				"install -Dm755 sm-gui-launcher /app/bin/sm-gui-launcher",
				"mkdir -p /app/share/MYGUI",
				"cp resources.xml /app/share/MYGUI",
				"mkdir -p /app/share/metainfo/",
				"cp metainfo.xml /app/share/metainfo/io.github.Tofixrs.sm_layout_editor.metainfo.xml",
				"mkdir -p /app/share/applications/",
				"cp desktop.desktop /app/share/applications/io.github.Tofixrs.sm_layout_editor.desktop"
			],
			"sources": [
				{
					"type": "script",
					"dest-filename": "sm-gui-launcher",
					"commands": [
						"message=$(/app/bin/SMLayoutEditor-ConfigGen 2>&1)",
						"if [ $message != \"\" ]; then zenity --error --text=\"$message\" --title=\"Failed to launch sm-gui-editor\"; fi",
						"cd /app/share/MYGUI",
						"LayoutEditor"
					]
				},
				{
					"type": "file",
					"path": "resources.xml"
				},
				{
					"type": "file",
					"path": "metainfo.xml"
				},
				{
					"type": "file",
					"path": "desktop.desktop"
				}
			]
		}
	]
}
